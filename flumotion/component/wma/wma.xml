<registry>

  <components>
    <component type="wma-encoder"
               base="flumotion/component/wma">
      <source location="flumotion.component.wma.wma" />

      <eater name="default" />
      <feeder name="default" />

      <entries>
        <entry type="component" location="wma.py"
               function="WMAEncoder" />
      </entries>

      <properties>
        <property name="bitrate" type="int" />
      </properties>

    </component>
  </components>

  <bundles>

    <bundle project="windowsmedia" name="wma-component">
        <dependencies>
            <dependency name="component" />
        </dependencies>

        <directories>
            <directory name="flumotion/component/wma">
                <filename location="__init__.py" />
                <filename location="wma.py" />
            </directory>
        </directories>
    </bundle>

  </bundles>

</registry> 
