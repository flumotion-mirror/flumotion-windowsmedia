<registry>

  <components>
    <component type="wmv-encoder"
               base="flumotion/component/wmv">
      <source location="flumotion.component.wmv.wmv" />

      <entries>
        <entry type="component" location="wmv.py"
               function="createComponent" />
      </entries>

      <properties>
        <property name="source" type="string" multiple="no" />
        <property name="feed" type="string" required="yes" multiple="yes" />
        <property name="bitrate" type="int" />
      </properties>
    </component>
  </components>

  <bundles>

    <bundle project="windowsmedia" name="wmv-component">
        <dependencies>
            <dependency name="component" />
        </dependencies>

        <directories>
            <directory name="flumotion/component/wmv">
                <filename location="__init__.py" />
                <filename location="wmv.py" />
            </directory>
        </directories>
    </bundle>

  </bundles>

</registry> 
